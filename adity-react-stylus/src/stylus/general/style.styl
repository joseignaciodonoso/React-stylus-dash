$light = white  
$gray = #c4ccde

*
    margin 0px 
    padding: 0px
    font-family: 'Rubik', sans-serif;
body 
    background-color: rgb(202, 89, 89)

.flex
    display: flex

.navbar
    background-color: $light;
    padding: 1rem 2rem
    border-bottom: 1px solid $gray;

.sidebar
    width 14rem
    height: calc(100vh - 52px)
    border-right: 1px solid $gray;
    ul 
        list-style none
        padding: 1rem 2rem
        li 
            margin-bottom 1rem
            a 
                text-decoration: none